          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search" required ng-model="searchTerm">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        <ul class="nav navbar-nav navbar-right">

          <li ng-hide="currentUser"><a href="" ng-click="showLogin()">Login</a></li>
          <li ng-hide="currentUser"><a href="" ng-click="showSignup()">Create Account</a></li>
          
          <li ng-show="currentUser" class="dropdown" dropdown>
            <a href="#" dropdown-toggle class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{currentUser.firstName || 'User'}} <span class="caret"></span></a>
